CREATE TABLE Worker(
Worker_ID INT NOT NULL PRIMARY KEY,
FIRST_NAME VARCHAR(10),
LAST_NAME VARCHAR(10),
SALARY INT,
JOININT_DATE VARCHAR(10),
DEPARTMENT VARCHAR(10)
);

