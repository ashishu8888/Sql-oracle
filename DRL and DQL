CREATE TABLE Title(
WORKER_REF_ID INT,
WORKER_TITLE VARCHAR(10),
AFFECTED_FROM VARCHAR(10),
FOREIGN KEY (WORKER_REF_ID) REFERENCES Worker(WORKER_ID) ON DELETE CASCADE);

